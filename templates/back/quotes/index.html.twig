{% extends 'back/base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    {% for type, messagesOfType in app.flashes %}
        {% for message in messagesOfType %}
            {% set alertClass = (type == 'error') ? 'bg-red-200' : 'bg-green-200' %}
            <div class="alert hidden w-50 {{ alertClass }} px-4 py-3 rounded absolute top-[7rem] left-[37rem]" role="alert">
                <div class="flex flex-row items-center ">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="{{ (type == 'error') ? '#FF0000' : '#3EEF00' }}" aria-hidden="true" class="w-5 h-5">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="{{ (type == 'error') ? 'text-red-900' : 'text-green-900' }} text-xs ml-2">{{ message }}</span>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="mt-10 flex flex-row justify-between items-center">
        <h2 class=" ml-5 text-[#D9DDDF] text-3xl font-extrabold flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="24" viewBox="0 0 14 24" fill="none">
                <path d="M13.4125 10.5875C14.1938 11.3687 14.1938 12.6375 13.4125 13.4187L3.41255 23.4187C2.6313 24.2 1.36255 24.2 0.581299 23.4187C-0.199951 22.6375 -0.199951 21.3687 0.581299 20.5875L9.1688 12L0.587549 3.41249C-0.193701 2.63124 -0.193701 1.36249 0.587549 0.581238C1.3688 -0.200012 2.63755 -0.200012 3.4188 0.581238L13.4188 10.5812L13.4125 10.5875Z"
                      fill="#D9DDDF"/>
            </svg>{{ controller_name }}</h2>
        <a href="{{ path('app_back_quotes_add') }}" class="btn-primary " ><img src="https://i.goopics.net/8ohf9z.png" alt="Icon Ajouter un utilisateur " class="w-5">Ajouter un devis</a>
    </div>
    <div class="drop-shadow-lg mx-5 mt-6 bg-white p-10 ">

         {% include"back/blocks/search_data.html.twig" with{
            form:form
        } %}<div class="overflow-x-auto mt-3">
            <table class="min-w-full table-auto bg-white border border-gray-200">
                <thead>
                <tr>
                    <th class="px-4 py-2 border border-gray-200">N°devis</th>
                    <th class="px-4 py-2 border border-gray-200">Date création</th>
                    <th class="px-4 py-2 border border-gray-200">Client</th>
                    <th class="px-4 py-2 border border-gray-200">Total HT </th>
                    <th class="px-4 py-2 border border-gray-200">Total TTC</th>
                    <th class="px-4 py-2 border border-gray-200">Status</th>
                    <th class="px-4 py-2 border border-gray-200">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for quote in quoteList %}
                    <tr>
                        <td class="px-4 py-2 border border-gray-200">{{ quote.quotationNumber }}</td>
                        <td class="px-4 py-2 border border-gray-200">{{ quote.createdAt|date('Y-m-d') }}</td>
                        <td class="px-4 py-2 border border-gray-200">{{ quote.lastName }} {{ quote.firstName }}</td>
                        <td class="px-4 py-2 border border-gray-200">{{ quote.totalHT }}€</td>
                        <td class="px-4 py-2 border border-gray-200">{{ quote.totalTTC }}€</td>
                        <td class="px-4 py-2 border border-gray-200">{{ quote.status }}</td>
                        <td class="px-4 py-2  border border-gray-200 flex justify-around items-center">
                            <a href="{{ path('app_back_quotes_generate_pdf',{'quotationNumber':quote.quotationNumber})}}">
                                <img src="https://i.goopics.net/i24tz6.png" alt="Icon  télécharger" class="w-6 cursor-pointer">
                            </a>
                            <a href="{{ path('app_back_quotes_delete',{'quotationNumber':quote.quotationNumber}) }}"><img src="https://i.goopics.net/szydej.png" alt="Icon Supprimer" class="w-6 cursor-pointer"></a>

                            <a href="{{ path('app_back_quotes_edit',{'quotationNumber':quote.quotationNumber}) }}">
                                <img src="https://i.goopics.net/662e41.png" alt="Icon Modifier" class="w-6 ml-2 cursor-pointer">
                            </a>
                            <a href="{{ path('app_back_sendEmail',{'quotationNumber':quote.quotationNumber}) }}">
                                <img src="https://i.goopics.net/l75uty.png" alt="Icon envoyer" class="w-6 ml-2 cursor-pointer">
                            </a>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination-->
       <div class="flex justify-center items-center mt-4">
            <nav class="block">
                {{ knp_pagination_render(quoteList) }}
            </nav>
        </div>

    </div>


{% endblock %}
