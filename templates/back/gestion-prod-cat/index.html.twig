</div>
    



<div class="drop-shadow-lg mx-5 mt-6 bg-white p-10 ">

        <div class="overflow-x-auto mt-3">
            <table class="min-w-full table-auto bg-white border border-gray-200">
                <thead>
                <tr>
                    <th class="px-4 py-2 border border-gray-200">Numéro</th>

                    <th class="px-4 py-2 border border-gray-200">Catégorie</th>
                    <th class="px-4 py-2 border border-gray-200">Description</th>
                    <th class="px-4 py-2 border border-gray-200">Nombre des produits</th>
                    <th class="px-4 py-2 border border-gray-200">Action</th>
                </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                    <tr>
                        <td class="px-4 py-2 border border-gray-200">{{ category[0].id }}</td>
                        <td class="px-4 py-2 border border-gray-200">{{ category[0].nom }}</td>
                        <td class="px-4 py-2 border border-gray-200">{{category[0].description}}</td>
                        <td class="px-4 py-2 border border-gray-200">{{category.productCount}}</td>
                        
                        <td class="px-8 py-2  border border-gray-200 flex justify-center items-center">
                            <span onclick="deleteCat({{ category[0].id }})" ><img src="https://i.goopics.net/szydej.png" alt="Icon Supprimer" class="w-6 cursor-pointer"></span>
                            <a href=""><img src="https://i.goopics.net/662e41.png" alt="Icon Modifier" class="w-6 ml-2 cursor-pointer"></a>
                        </td>
                    </tr>
                    {% endfor %}

                </tbody>
            </table>
</div>

        <!-- Pagination -->
        <div class="flex justify-center items-center mt-4">
            <nav class="block">
                {{ knp_pagination_render(categories) }}
            </nav>
        </div>
    </div>



<style>
    /* Ajoutez cette section pour définir l'animation fadeInDown */
    @keyframes fadeInDown {
        from {
            
            opacity: 0;
            -webkit-transform: translatey(-100px);
            -moz-transform: translatey(-100px);
            -o-transform: translatey(-100px);
            transform: translatey(-100px);
        }
        to {
            
            opacity: 1;
            -webkit-transform: translatey(0px);
            -moz-transform: translatey(0px);
            -o-transform: translatey(0px);
            transform: translatey(0px);
        }
    }

    @keyframes fadeOutUp {
        from {
            opacity: 1;
        }
        to {
            opacity: 0;
            transform: translateY(-50px);
        }
    }

    .fadeOutUp {
        animation: fadeOutUp 1s;
    }
    
</style>

<script>

   

    // Fonction pour afficher le formulaire avec une animation de haut en bas
    function afficherFormulaire(formulaireId) {
        var formulaire = document.getElementById(formulaireId);
        formulaire.classList.remove('hidden');
        formulaire.style.animation = 'fadeInDown 0.5s';

        // Ajoutez une classe d'animation pour faire descendre le formulaire
        formulaire.classList.add('fadeInDown');

        // Supprimez la classe d'animation après l'achèvement pour la prochaine utilisation
        setTimeout(function() {
            formulaire.classList.remove('fadeInDown');
        }, 500);
    }

    function cacherFormulaire(formulaireId) {
        var formulaire = document.getElementById(formulaireId);
        formulaire.classList.add('fadeOutUp');

        setTimeout(function() {
            formulaire.classList.add('hidden');
            formulaire.classList.remove('fadeOutUp');
        }, 500);
    }

