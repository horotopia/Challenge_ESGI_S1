{% extends 'back/base.html.twig' %}

{% block title %}Détails de la Facture{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Détails de la Facture</h1>
    
    <div class="card">
        <div class="card-header">
            Facture N°: {{ facture.numFacture }}
        </div>
        <div class="card-body">
            <h5 class="card-title">Client: {{ facture.client.nom }} {{ facture.client.prenom }}</h5>
            <p class="card-text">Date de Facturation: {{ facture.dateCreation|date('d/m/Y') }}</p>
            <p class="card-text">Date d'Échéance: {{ facture.dateEcheance|date('d/m/Y') }}</p>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Produit/Service</th>
                        <th scope="col">Quantité</th>
                        <th scope="col">Prix Unitaire</th>
                        <th scope="col">Total HT</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ligne in facture.lignesFacture %}
                        <tr>
                            <td>{{ ligne.produit.nom }}</td>
                            <td>{{ ligne.quantite }}</td>
                            <td>{{ ligne.prixUnitaire }}</td>
                            <td>{{ ligne.totalLigneHT }}</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <th colspan="3" class="text-right">Total HT:</th>
                        <td>{{ facture.totalHT }}</td>
                    </tr>
                    <tr>
                        <th colspan="3" class="text-right">TVA (%):</th>
                        <td>{{ facture.tauxTVA }}</td>
                    </tr>
                    <tr>
                        <th colspan="3" class="text-right">Total TTC:</th>
                        <td>{{ facture.totalTTC }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}