{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="text-red-500 text-sm" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <main id="content" role="main" class="w-full  max-w-md mx-auto p-6 mt-28">
        <div class="mt-7 bg-white  rounded-xl shadow-lg dark:bg-gray-800 dark:border-gray-700 border-2 border-indigo-300">
            <a href="{{ path("app_index") }}" aria-label="Logo Fast Invoice" tabindex="1" class=" flex  flex-row justify-center">
                <img src="https://i.goopics.net/g0scmw.png" alt="Logo Fast Invoice" class=" mt-8">
            </a>
            <div class="p-4 sm:p-7">
                <div class="text-center">
                    <h1 class="block text-2xl font-bold text-gray-800 dark:text-white">Mot de passe oublié ?</h1>
                    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                        Souvenez-vous de votre mot de passe ?
                        <a class="text-blue-600 decoration-2 hover:underline font-medium" href="{{ path('app_login') }}">
                            Connectez-vous ici
                        </a>
                    </p>
                </div>

                <div class="mt-5">
                    {{ form_start(requestForm) }}
                    <div class="grid gap-y-4">
                        {{ form_label(requestForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-bold ml-1 mb-2 dark:text-white'}}) }}
                        {% if requestForm.email.vars.errors|length > 0 %}
                            {% for error in requestForm.email.vars.errors %}
                                <span class="ml-10 text-xs text-red-500">{{ error.message }}</span>
                            {% endfor %}
                        {% endif %}
                    </div>
                    {{ form_widget(requestForm.email, {
                        'attr': {
                            'class': 'py-3 px-4 block w-full border-2 border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 shadow-sm',
                            'placeholder': 'exemple@gmail.com'
                        }
                    }) }}
                    {{ form_help(requestForm.email) }}
                    <div class="flex flex-row justify-center">
                        <button type="submit"
                                class="py-3 px-4 mt-2 flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm dark:focus:ring-offset-gray-800">
                            Réinitialiser le mot de passe
                        </button>
                    </div>  {{ form_end(requestForm) }}
                </div>
            </div>
        </div>


        <p class="mt-3 flex justify-center items-center text-center divide-x divide-gray-300 dark:divide-gray-700">
            <a class="pr-3.5 inline-flex items-center gap-x-2 text-sm text-gray-600 decoration-2 hover:underline hover:text-blue-600 dark:text-gray-500 dark:hover:text-gray-200" href="#" target="_blank">
             <img src="https://image.noelshack.com/fichiers/2023/46/7/1700429800-favicon.png" class="w-5">
               FAST INVOICE
            </a>
            <a class="pl-3 inline-flex items-center gap-x-2 text-sm text-gray-600 decoration-2 hover:underline hover:text-blue-600 dark:text-gray-500 dark:hover:text-gray-200" href="{{ path('app_contact') }}">

                Contactez-nous !
            </a>
        </p>
    </main>
{% endblock %}
