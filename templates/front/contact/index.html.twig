                    <!-- Formulaire avec inputs deux par ligne -->
                    <div class="md:w-2/3 sm:w-3/3 bg-white  rounded shadow-md">
                        <div class="w-full sm:w-full relative myBg rounded-tl-lg rounded-tr-lg ">
                        <h2 class="text-2xl text-white text-center font-semibold mb-4 p-6">Mon Formulaire</h2>
                        </div>
                        <!-- Champs d'entrée -->
                        <form action="#" method="post" class="p-8">
                            <!-- Première ligne -->
                            <div class="flex mb-4">
                                <div class="w-1/2 sm:2/2 pr-2">
                                    <label for="nom" class="block text-xl text-sm font-medium mb-2">Entreprise</label>
