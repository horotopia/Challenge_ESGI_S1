                                    <input type="email" id="email" name="email" placeholder="exemple@test.fr" class="w-full px-3 py-2 border rounded-full focus:outline-none focus:border-blue-500" required>
                                </div>

                                <div class="w-1/2 pl-2">
                                    <!-- Quatrième champ d'entrée -->
                                    <label for="telephone" class="block text-xl text-sm font-medium mb-2">Téléphone</label>
                                    <input type="tel" id="telephone" name="telephone" placeholder="+33102030405" class="w-full px-3 py-2 border rounded-full focus:outline-none focus:border-blue-500" required>
                                </div>
                            </div>

                            <!-- Deuxième ligne -->
                            
                            <div class="flex mb-4">
                                <div class="w-2/2 w-full pl-2">
                                    <!-- Quatrième champ d'entrée -->
                                    <label for="telephone" class="block text-xl text-sm font-medium mb-2">Objet de votre demande</label>
                                    <input type="tel" id="objet" name="objet" placeholder="Objet de votre demande"  class="w-full px-3 py-2 border rounded-full focus:outline-none focus:border-blue-500" required>
                                </div>
                            </div>

                            <!-- Deuxième ligne -->
                            <div class="flex mb-4">
                                <div class="w-2/2 w-full pr-2">
                                    <!-- Troisième champ d'entrée -->
                                    <label for="email" class="block text-xl text-sm font-medium mb-2">Message</label>
                                    <input type="textarea" id="message" name="message" placeholder="Bonjour..." class="w-full h-full px-3 py-2 border rounded-full focus:outline-none focus:border-blue-500" required>
                                </div>
                            </div>

