                                    <input type="text" id="nom" name="prnom" placeholder="Nom complet du contact" class="w-full px-3 py-2 border rounded-full focus:outline-none focus:border-blue-500" required>
                                </div>
                            </div>

                            <!-- Deuxième ligne -->
                            <div class="flex mb-4">
                                <div class="w-1/2 pr-2">
                                    <!-- Troisième champ d'entrée -->
